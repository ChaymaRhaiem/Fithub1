        </div>
        <div class="form-group">
            {{ form_widget(form.genre, {'attr': {'class': 'form-control', 'placeholder': 'Merci de choisir le genre'}}) }}
            {% if form_errors(form.genre)is not empty %}
            <div class="alert alert-danger">
            {{ form_errors(form.genre) }}
            {% endif %}
